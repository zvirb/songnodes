{
  "name": "songnodes",
  "version": "1.0.0",
  "description": "Music Database and Tracklist Management System with AI Orchestration",
  "private": true,
  "workspaces": [
    "frontend",
    "services/api-gateway",
    "services/enhanced-visualization-service",
    "services/health-monitor"
  ],
  "scripts": {
    "start": "./start-dev.sh",
    "dev": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "test": "npm run test --workspaces",
    "test:mem": "node --max-old-space-size=8192 node_modules/.bin/npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "install:all": "npm install --workspaces",
    "mcp:start": "cd mcp_servers && ./start_integrated_mcp.sh",
    "mcp:stop": "cd mcp_servers && ./stop_integrated_mcp.sh",
    "mcp:test": "cd mcp_servers && python3 test_integrated_mcp.py",
    "maintenance:cleanup": "./scripts/maintenance/cleanup.sh",
    "maintenance:update": "./scripts/maintenance/update-dependencies.sh",
    "maintenance:health": "./scripts/maintenance/health-check.sh",
    "maintenance:full": "./scripts/maintenance/health-check.sh && ./scripts/maintenance/cleanup.sh",
    "prepare": "husky install",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "semantic-release",
    "lint:commits": "commitlint --from=HEAD~1",
    "lint:commits:all": "commitlint --from=origin/main"
  },
  "keywords": [
    "music",
    "database",
    "tracklist",
    "scraping",
    "api",
    "microservices",
    "ai-orchestration"
  ],
  "author": "SongNodes Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "semantic-release": "^22.0.12",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.5",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "playwright": "^1.55.0",
    "puppeteer": "^24.22.0"
  }
}
