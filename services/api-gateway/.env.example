# API Gateway Environment Configuration
NODE_ENV=development
PORT=8080

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_pass_2024
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://musicdb.local,https://musicdb.local

# Security Configuration
BLOCKED_IPS=
ALLOWED_IPS=
REQUEST_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info

# Webhook Configuration (optional)
WEBHOOK_URL=

# Service Discovery (for health checks)
REST_API_URL=http://rest-api:8082
GRAPHQL_API_URL=http://graphql-api:8081
WEBSOCKET_API_URL=http://websocket-api:8083

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/musicdb.crt
SSL_KEY_PATH=/etc/nginx/ssl/musicdb.key
SSL_CA_PATH=/etc/nginx/ssl/ca.crt