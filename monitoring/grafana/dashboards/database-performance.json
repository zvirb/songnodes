{
  "dashboard": {
    "id": null,
    "title": "MusicDB - Database Performance",
    "tags": ["musicdb", "database", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Connection Pool Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pgbouncer_active_connections_total",
            "legendFormat": "Active: {{database}}"
          },
          {
            "expr": "pgbouncer_waiting_connections_total",
            "legendFormat": "Waiting: {{database}}"
          },
          {
            "expr": "pgbouncer_used_connections_total",
            "legendFormat": "Used: {{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(pgbouncer_query_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(pgbouncer_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(pgbouncer_query_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "min": 0,
            "label": "Query Duration"
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": {"params": ["B", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "evaluator": {"params": [0.05], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Query Latency",
          "noDataState": "no_data"
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Track Processing Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tracks_processed_total[5m]) * 3600",
            "legendFormat": "Tracks/hour"
          }
        ],
        "yAxes": [
          {
            "unit": "short",
            "min": 0,
            "label": "Tracks per Hour"
          }
        ],
        "thresholds": [
          {
            "value": 20000,
            "colorMode": "critical",
            "op": "lt",
            "fill": true,
            "line": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Database Size & Growth",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"musicdb\"} / (1024*1024*1024)",
            "legendFormat": "Database Size (GB)"
          },
          {
            "expr": "increase(pg_database_size_bytes{datname=\"musicdb\"}[1h]) / (1024*1024)",
            "legendFormat": "Hourly Growth (MB)"
          }
        ],
        "yAxes": [
          {"unit": "bytes", "min": 0, "label": "Size"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Top Slow Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, pg_stat_statements_mean_time_ms)",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Index Usage Efficiency",
        "type": "bargauge",
        "targets": [
          {
            "expr": "pg_stat_user_indexes_idx_scan / (pg_stat_user_indexes_idx_scan + pg_stat_user_tables_seq_scan) * 100",
            "legendFormat": "{{indexname}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Connection Pool Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "(pgbouncer_used_connections_total / (pgbouncer_used_connections_total + pgbouncer_waiting_connections_total)) * 100",
            "legendFormat": "{{database}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 8,
        "title": "WAL Generation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_wal_written_bytes[5m])",
            "legendFormat": "WAL Bytes/sec"
          }
        ],
        "yAxes": [
          {"unit": "bytes", "min": 0, "label": "Bytes per Second"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 9,
        "title": "Lock Waits & Deadlocks",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_deadlocks[5m])",
            "legendFormat": "Deadlocks/sec"
          },
          {
            "expr": "pg_locks_count{mode=\"ExclusiveLock\"}",
            "legendFormat": "Exclusive Locks"
          }
        ],
        "yAxes": [
          {"unit": "short", "min": 0, "label": "Count"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 10,
        "title": "Data Quality Issues",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(data_quality_issues_created_total[1h]))",
            "legendFormat": "Issues/hour"
          },
          {
            "expr": "sum(data_quality_unresolved_total)",
            "legendFormat": "Unresolved"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
}