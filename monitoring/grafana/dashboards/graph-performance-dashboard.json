{
  "dashboard": {
    "id": null,
    "title": "Song Nodes - Graph Performance Dashboard",
    "tags": ["songnodes", "graph", "performance"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": [
        {
          "name": "batch_size",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(node_processing_duration_seconds_bucket, batch_size)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "value": "All",
            "text": "All"
          }
        },
        {
          "name": "operation",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(graph_operations_total, operation)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "value": "All",
            "text": "All"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Graph Processing Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(graph_operations_total[5m]))",
            "legendFormat": "Operations/sec",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(node_processing_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th Percentile Latency",
            "refId": "B"
          },
          {
            "expr": "sum(websocket_active_connections{type=\"graph_updates\"})",
            "legendFormat": "Active Graph Connections",
            "refId": "C"
          },
          {
            "expr": "sum(graph_operations_pending)",
            "legendFormat": "Pending Operations",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "95th Percentile Latency"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 1.0},
                    {"color": "red", "value": 2.0}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Operations/sec"},
              "properties": [
                {"id": "unit", "value": "ops"}
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Graph Processing Latency Distribution",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(node_processing_duration_seconds_bucket{batch_size=~\"$batch_size\"}[5m])) by (le, batch_size))",
            "legendFormat": "50th percentile - {{batch_size}} nodes",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(node_processing_duration_seconds_bucket{batch_size=~\"$batch_size\"}[5m])) by (le, batch_size))",
            "legendFormat": "95th percentile - {{batch_size}} nodes",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(node_processing_duration_seconds_bucket{batch_size=~\"$batch_size\"}[5m])) by (le, batch_size))",
            "legendFormat": "99th percentile - {{batch_size}} nodes",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Processing Time",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1.0},
                {"color": "red", "value": 2.0}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "Graph Operations Rate by Type",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(graph_operations_total{operation=~\"$operation\", status=\"success\"}[5m])) by (operation)",
            "legendFormat": "{{operation}} - Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(graph_operations_total{operation=~\"$operation\", status=\"error\"}[5m])) by (operation)",
            "legendFormat": "{{operation}} - Error",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "pointSize": 5,
              "stacking": {"mode": "normal", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Operations/sec"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Error.*"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*Success.*"},
              "properties": [
                {"id": "color", "value": {"mode": "palette-classic"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 4,
        "title": "WebSocket Real-time Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "websocket_active_connections{type=\"graph_updates\"}",
            "legendFormat": "Graph Update Connections",
            "refId": "A"
          },
          {
            "expr": "websocket_active_connections{type=\"search\"}",
            "legendFormat": "Search Connections",
            "refId": "B"
          },
          {
            "expr": "rate(websocket_messages_sent_total{type=\"graph_updates\"}[5m])",
            "legendFormat": "Graph Updates Sent/sec",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Sent/sec.*"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 5,
        "title": "Graph Memory Usage & Cache Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "graph_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Graph Memory Usage (MB)",
            "refId": "A"
          },
          {
            "expr": "rate(graph_cache_hits_total[5m])",
            "legendFormat": "Cache Hits/sec",
            "refId": "B"
          },
          {
            "expr": "rate(graph_cache_misses_total[5m])",
            "legendFormat": "Cache Misses/sec",
            "refId": "C"
          },
          {
            "expr": "graph_cache_hit_ratio",
            "legendFormat": "Cache Hit Ratio",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Graph Memory Usage (MB)"},
              "properties": [
                {"id": "unit", "value": "decmbytes"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*sec.*"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Cache Hit Ratio"},
              "properties": [
                {"id": "unit", "value": "percentunit"},
                {"id": "custom.axisPlacement", "value": "right"},
                {"id": "min", "value": 0},
                {"id": "max", "value": 1}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Graph Algorithm Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(graph_algorithm_duration_seconds_bucket{algorithm=\"pathfinding\"}[5m])) by (le))",
            "legendFormat": "Pathfinding - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(graph_algorithm_duration_seconds_bucket{algorithm=\"clustering\"}[5m])) by (le))",
            "legendFormat": "Clustering - 95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(graph_algorithm_duration_seconds_bucket{algorithm=\"recommendation\"}[5m])) by (le))",
            "legendFormat": "Recommendation - 95th percentile",
            "refId": "C"
          },
          {
            "expr": "rate(graph_algorithm_operations_total{status=\"success\"}[5m])",
            "legendFormat": "{{algorithm}} - Success Rate",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Success Rate.*"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Database Query Performance (Graph Operations)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(postgres_query_duration_seconds_bucket{query_type=\"graph\"}[5m])) by (le))",
            "legendFormat": "Graph Queries - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "rate(postgres_queries_total{query_type=\"graph\"}[5m])",
            "legendFormat": "Graph Queries/sec",
            "refId": "B"
          },
          {
            "expr": "postgres_active_connections{database=\"musicdb\"}",
            "legendFormat": "Active DB Connections",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*percentile.*"},
              "properties": [
                {"id": "unit", "value": "s"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*Queries/sec.*"},
              "properties": [
                {"id": "unit", "value": "qps"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*Connections.*"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Graph Processing Queue Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "graph_operations_pending{operation=\"visualization\"}",
            "legendFormat": "Visualization Queue",
            "refId": "A"
          },
          {
            "expr": "graph_operations_pending{operation=\"pathfinding\"}",
            "legendFormat": "Pathfinding Queue",
            "refId": "B"
          },
          {
            "expr": "graph_operations_pending{operation=\"clustering\"}",
            "legendFormat": "Clustering Queue",
            "refId": "C"
          },
          {
            "expr": "graph_processing_workers_active",
            "legendFormat": "Active Workers",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 9,
        "title": "Error Rate by Graph Operation",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "rate(graph_operations_total{operation=~\"$operation\", status=\"error\"}[5m]) / rate(graph_operations_total{operation=~\"$operation\"}[5m]) * 100",
            "legendFormat": "{{operation}} Error Rate %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 10,
        "title": "Graph Size and Complexity Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "graph_total_nodes",
            "legendFormat": "Total Nodes",
            "refId": "A"
          },
          {
            "expr": "graph_total_edges",
            "legendFormat": "Total Edges",
            "refId": "B"
          },
          {
            "expr": "graph_avg_node_degree",
            "legendFormat": "Average Node Degree",
            "refId": "C"
          },
          {
            "expr": "graph_clustering_coefficient",
            "legendFormat": "Clustering Coefficient",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "Total.*"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": "Average.*|Clustering.*"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Graph Processing Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Graph.*\"}",
          "iconColor": "red",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{summary}}"
        },
        {
          "name": "High Load Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "increase(graph_operations_total[1m]) > 1000",
          "iconColor": "orange",
          "titleFormat": "High Graph Load",
          "textFormat": "Spike in graph operations detected"
        }
      ]
    },
    "schemaVersion": 30,
    "version": 1,
    "links": [
      {
        "title": "Infrastructure Overview",
        "url": "/d/infrastructure-overview/song-nodes-infrastructure-overview",
        "type": "dashboards"
      },
      {
        "title": "Application Metrics",
        "url": "/d/application-metrics/song-nodes-application-metrics",
        "type": "dashboards"
      },
      {
        "title": "Alert Manager",
        "url": "https://alerts.songnodes.com",
        "type": "link",
        "targetBlank": true
      }
    ]
  }
}