{
  "dashboard": {
    "id": null,
    "title": "Enhanced Scraper Orchestrator Dashboard",
    "description": "Monitoring dashboard for the automated scraping system with robots.txt compliance",
    "tags": ["songnodes", "scraping", "orchestrator", "robots"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Scraper Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "scrapers_enabled_total",
            "legendFormat": "Enabled",
            "refId": "A"
          },
          {
            "expr": "scrapers_scheduled_total",
            "legendFormat": "Scheduled",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "displayMode": "basic",
              "orientation": "auto"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Queue Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "queue_size_total",
            "legendFormat": "Total Tasks",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Domain Success Rates",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "domain_success_rate",
            "legendFormat": "{{ domain }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 4,
        "title": "Rate Limit Incidents (Last Hour)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "increase(domain_rate_limits[5m])",
            "legendFormat": "{{ domain }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {"mode": "off"}
            },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 5,
        "title": "Average Response Times by Domain",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "avg_by(domain)(domain_avg_response_time)",
            "legendFormat": "{{ domain }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "showPoints": "never",
              "stacking": {"mode": "none", "group": "A"}
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Scraping Frequency by Domain",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(scraping_tasks_total[1h])",
            "legendFormat": "{{ scraper }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {"type": "linear"}
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Robots.txt Compliance Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "domain_total_requests",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "domain_success_rate",
            "format": "table",
            "refId": "B"
          },
          {
            "expr": "domain_rate_limits",
            "format": "table",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Success Rate"},
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "thresholds"
                  }
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "red", "value": null},
                      {"color": "yellow", "value": 80},
                      {"color": "green", "value": 95}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "domain": "Domain",
                "Value #A": "Total Requests",
                "Value #B": "Success Rate",
                "Value #C": "Rate Limits"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "up{job=\"scraper-orchestrator\"}",
            "legendFormat": "Orchestrator Up",
            "refId": "A"
          },
          {
            "expr": "sum(up{job=~\"scraper-.*\"})",
            "legendFormat": "Active Scrapers",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Adaptive Scheduling Intervals",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "scheduler_calculated_interval",
            "legendFormat": "{{ scraper }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 20,
              "showPoints": "always",
              "pointSize": 8
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 10,
        "title": "Error Patterns",
        "type": "logs",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "{job=\"scraper-orchestrator\"} |= \"ERROR\" or \"rate limit\" or \"robots.txt\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "domain",
          "type": "query",
          "query": "label_values(domain_success_rate, domain)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": null
        },
        {
          "name": "scraper",
          "type": "query",
          "query": "label_values(scrapers_enabled_total, scraper)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": null
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Rate Limit Events",
          "enable": true,
          "iconColor": "red",
          "query": "increase(domain_rate_limits[1m]) > 0",
          "titleFormat": "Rate limit hit",
          "textFormat": "{{ domain }} hit rate limit"
        },
        {
          "name": "Scheduler Changes",
          "enable": true,
          "iconColor": "blue",
          "query": "changes(scheduler_calculated_interval[5m]) > 0",
          "titleFormat": "Interval changed",
          "textFormat": "{{ scraper }} interval adjusted"
        }
      ]
    },
    "links": [
      {
        "title": "Orchestrator API",
        "url": "http://localhost:8001/status",
        "type": "link",
        "icon": "external link",
        "tooltip": "Open orchestrator API status"
      },
      {
        "title": "Robots.txt Stats",
        "url": "http://localhost:8001/robots/stats",
        "type": "link",
        "icon": "info",
        "tooltip": "View robots.txt compliance statistics"
      }
    ]
  }
}